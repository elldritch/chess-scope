{
  "name": "chess-tacscope",
  "private": true,
  "scripts": {
    "build": "npm run clean && mkdir dist tmp && npm run build:html && npm run build:js && find dist -empty -type d -delete",
    "build:html": "pug --out dist/app app && find dist -name _*.html -delete",
    "build:js": "tsc --outdir tmp && npm run build:js:app && npm run build:js:server",
    "build:js:app": "mkdir -p dist/app && browserify tmp/app/index.js -o dist/app/index.js -t babelify",
    "build:js:server": "rsync -a tmp/* dist --exclude app",
    "clean": "rm -rf dist tmp",
    "start": "node dist/server.js",
    "dev": "nodemon --ext ts,js,json,pug --ignore dist/ --ignore tmp/ --exec 'npm run build && npm start'"
  },
  "dependencies": {
    "express": "^4.16.2",
    "http-proxy": "^1.16.2",
    "oakmac-chessboard": "^1.0.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/http-proxy": "^1.12.2",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/webpack-env": "^1.13.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "nodemon": "^1.12.1",
    "pug": "^2.0.0-rc.4",
    "react-hot-loader": "^3.1.3",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
